<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--#region Gradients-->
    
    <!--Window Bg-->
    <LinearGradientBrush x:Key="WindowBgColor" StartPoint="0,0" EndPoint="0,5">
        <GradientStop Color="#FF10658C" Offset="0.0"/>
        <GradientStop Color="#FFF5ECEB" Offset="0.5"/>
    </LinearGradientBrush>
    
    <!--Popup Bg-->
    <LinearGradientBrush x:Key="ListBgColor" StartPoint="0,0" EndPoint="0,5">
        <GradientStop Color="#FF2F84AC" Offset="0.0"/>
        <GradientStop Color="#FF97D5F2" Offset="1.2"/>
    </LinearGradientBrush>
    
    <!--#endregion-->
    
    <!--#region Solid Color Brushes-->
    <SolidColorBrush x:Key="NavBackgroundLayerBrush" Color="#FFF5ECEB" Opacity="0.2"/>
    <SolidColorBrush x:Key="EditBackgroundLayerBrush" Color="#FFF5ECEB" Opacity="0.3"/>
    <SolidColorBrush x:Key="ListBackgroundLayerBrush" Color="#FFF5ECEB" Opacity="0.1"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#FF97CEDA"/>
    <SolidColorBrush x:Key="SelectedTodoBorderBrush" Color="#FD7E14"/>
    <SolidColorBrush x:Key="TodoBackgroundBrush" Color="#FF10658C"/>
    <!--#endregion-->
    
</ResourceDictionary>